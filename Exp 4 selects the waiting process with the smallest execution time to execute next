#include <stdio.h>
struct Process {
    int pid;   
    int bt;     
    int wt;    
    int tat;  
};
int main() {
    int n, i, j;
    printf("Enter number of processes: ");
    scanf("%d", &n);
    struct Process p[n];
    for(i = 0; i < n; i++) {
        p[i].pid = i + 1;
        printf("Enter Burst Time for Process %d: ", p[i].pid);
        scanf("%d", &p[i].bt);
    }
    for(i = 0; i < n - 1; i++) {
        for(j = 0; j < n - i - 1; j++) {
            if(p[j].bt > p[j + 1].bt) {
                struct Process temp = p[j];
                p[j] = p[j + 1];
                p[j + 1] = temp;
            }
        }
    }
    p[0].wt = 0;
    for(i = 1; i < n; i++) {
        p[i].wt = 0;
        for(j = 0; j < i; j++) {
            p[i].wt += p[j].bt;
        }
    }
    for(i = 0; i < n; i++) {
        p[i].tat = p[i].bt + p[i].wt;
    }
    printf("\nProcess\tBT\tWT\tTAT\n");
    for(i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\n", p[i].pid, p[i].bt, p[i].wt, p[i].tat);
    }
    float avgwt = 0, avgtat = 0;
    for(i = 0; i < n; i++) {
        avgwt += p[i].wt;
        avgtat += p[i].tat;
    }
    avgwt /= n;
    avgtat /= n;
    printf("\nAverage Waiting Time = %.2f", avgwt);
    printf("\nAverage Turnaround Time = %.2f\n", avgtat);
   return 0;
}
