#include <stdio.h>
#include <fcntl.h>    
#include <unistd.h>  
#include <string.h>   
int main() {
    int fd;              
    char writeData[] = "Hello, this is a file created using UNIX system calls.\n";
    char readData[100];
    fd = open("demo.txt", O_CREAT | O_RDWR, 0644);
    if (fd < 0) {
        perror("Error creating/opening file");
        return 1;
    }
    printf("File 'demo.txt' created/opened successfully.\n");
    if (write(fd, writeData, strlen(writeData)) < 0) {
        perror("Error writing to file");
        close(fd);
        return 1;
    }
    printf("Data written to the file successfully.\n");
    lseek(fd, 0, SEEK_SET);
    if (read(fd, readData, sizeof(readData)) < 0) {
        perror("Error reading from file");
        close(fd);
        return 1;
    }
    printf("Data read from the file:\n%s", readData);
    close(fd);
    printf("File closed successfully.\n");

    return 0;
}
