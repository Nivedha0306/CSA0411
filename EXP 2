#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <string.h>

int main() {
    char srcPath[256], destPath[256];
    int src, dest;
    char buffer[1024];
    int n;

    // Ask user for source and destination file names
    printf("Enter the filename to open for reading: ");
    scanf("%s", srcPath);

    printf("Enter the filename to open for writing: ");
    scanf("%s", destPath);

    // Open source file for reading
    src = open(srcPath, O_RDONLY);
    if (src == -1) {
        perror("Error opening source file");
        return 1;
    }

    // Open destination file for writing (create if it doesn't exist)
    dest = open(destPath, O_WRONLY | O_CREAT | O_TRUNC, 0644);
    if (dest == -1) {
        perror("Error opening/creating destination file");
        close(src);
        return 1;
    }

    // Copy contents
    while ((n = read(src, buffer, sizeof(buffer))) > 0) {
        if (write(dest, buffer, n) != n) {
            perror("Error writing to destination file");
            close(src);
            close(dest);
            return 1;
        }
    }

    if (n == -1) {
        perror("Error reading source file");
    }

    printf("File copied successfully!\n");

    // Close files
    close(src);
    close(dest);

    return 0;
}
