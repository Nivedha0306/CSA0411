#include <stdio.h>
int main() {
    int framesCount, pagesCount, frames[20], pages[50];
    int i, j, k, pos, pageFaults = 0, flag1, flag2, farthest;
    printf("Enter number of frames: ");
    scanf("%d", &framesCount);
    printf("Enter number of pages in reference string: ");
    scanf("%d", &pagesCount);
    printf("Enter the page reference string:\n");
    for(i = 0; i < pagesCount; i++) {
        scanf("%d", &pages[i]);
    }

    for(i = 0; i < framesCount; i++) {
        frames[i] = -1; // Initialize frames as empty
    }
    printf("\nPage Reference String\tFrames\t\tStatus\n");
    for(i = 0; i < pagesCount; i++) {
        flag1 = flag2 = 0;
        for(j = 0; j < framesCount; j++) {
            if(frames[j] == pages[i]) {
                flag1 = flag2 = 1;
                break;
            }
        }
        if(flag1 == 0) {
            for(j = 0; j < framesCount; j++) {
                if(frames[j] == -1) {
                    frames[j] = pages[i];
                    flag2 = 1;
                    pageFaults++;
                    break;
                }
            }
        }

        if(flag2 == 0) {
            farthest = i + 1;
            pos = -1;

            for(j = 0; j < framesCount; j++) {
                int found = 0;
                for(k = i + 1; k < pagesCount; k++) {
                    if(frames[j] == pages[k]) {
                        if(k > farthest) {
                            farthest = k;
                            pos = j;
                        }
                        found = 1;
                        break;
                    }
                }
                if(!found) { // Page not used again
                    pos = j;
                    break;
                }
            }

            frames[pos] = pages[i];
            pageFaults++;
        }
        printf("%d\t\t\t", pages[i]);
        for(j = 0; j < framesCount; j++) {
            if(frames[j] != -1)
                printf("%d ", frames[j]);
            else
                printf("- ");
        }

        if(flag1 == 1)
            printf("\tHit\n");
        else
            printf("\tFault\n");
    }

    printf("\nTotal Page Faults = %d\n", pageFaults);
    return 0;
}
